@using NPAManagement.ValidationFilters;
@model NPAManagement.Models.CollateralDetailInCaseOfCurrentAsset
@if (this.ViewContext.FormContext == null)
{
    this.ViewContext.FormContext = new FormContext();
}
@{
    bool viewOnlyUser = false;
    if (ViewBag.ViewOnlyUser != null)
    {
        viewOnlyUser = (bool)ViewBag.ViewOnlyUser;
    }
}
@{string idValueToAttach = $"_{new Random().Next(1000, 9999)}{new Random().Next(1000, 9999)}{new Random().Next(10000, 99999)}{new Random().Next(1000, 9999)}";}
<div id="dvCollateralDetailCurrentAsset@(idValueToAttach)">
    <br />
    <div class="card">
        <div class="card-header" data-toggle="collapse" data-target="#collapseCollateralDetailCurrentAsset@(idValueToAttach)" aria-expanded="true" aria-controls="collapseCollateralDetailCurrentAsset@(idValueToAttach)">
            <h3>
                Current Asset Collateral Detail
            </h3>
        </div>
        <div class="collapse show" id="collapseCollateralDetailCurrentAsset@(idValueToAttach)">
            <div class="card-body">
                @*@Html.HiddenFor(m => m.CollateralDetailMainId)*@
                <div class="form-row">
                    @Html.LabelFor(model => model.DateOfLatestStockInspectionReportCollectedByBranch, htmlAttributes: new { @class = "control-label col-md-3 required" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.DateOfLatestStockInspectionReportCollectedByBranch, new { htmlAttributes = new { @class = "form-control date", @readOnly = "readOnly", @data_Model = "DateOfLatestStockInspectionReportCollectedByBranch", @id = "DateOfLatestStockInspectionReportCollectedByBranch" + (idValueToAttach) }.DisabledIf(viewOnlyUser == true) })
                        @Html.ValidationMessageFor(model => model.DateOfLatestStockInspectionReportCollectedByBranch, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.WorkingCapitalAsPerStockReport, htmlAttributes: new { @class = "control-label col-md-3 required" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.WorkingCapitalAsPerStockReport, new { htmlAttributes = new { @class = "form-control decimalType", @data_Model = "WorkingCapitalAsPerStockReport" }.DisabledIf(viewOnlyUser == true) })
                        @Html.ValidationMessageFor(model => model.WorkingCapitalAsPerStockReport, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <div class="form-row">
                    @Html.LabelFor(model => model.WorkingCapitalAsPerStockInspector, htmlAttributes: new { @class = "control-label col-md-3 required" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.WorkingCapitalAsPerStockInspector, new { htmlAttributes = new { @class = "form-control decimalType", @data_Model = "WorkingCapitalAsPerStockInspector" }.DisabledIf(viewOnlyUser == true) })
                        @Html.ValidationMessageFor(model => model.WorkingCapitalAsPerStockInspector, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.DrawingPower, htmlAttributes: new { @class = "control-label col-md-3 required" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.DrawingPower, new { htmlAttributes = new { @class = "form-control", @data_Model = "DrawingPower" }.DisabledIf(viewOnlyUser == true) })
                        @Html.ValidationMessageFor(model => model.DrawingPower, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <div class="form-row">
                    @Html.LabelFor(model => model.InsuranceCoverageType, htmlAttributes: new { @class = "control-label col-md-3 required" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.InsuranceCoverageType, new { htmlAttributes = new { @class = "form-control", @data_Model = "InsuranceCoverageType" }.DisabledIf(viewOnlyUser == true) })
                        @Html.ValidationMessageFor(model => model.InsuranceCoverageType, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.InsuranceExpiryDate, htmlAttributes: new { @class = "control-label col-md-3 required" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.InsuranceExpiryDate, new { htmlAttributes = new { @class = "form-control date", @readOnly = "readOnly", @data_Model = "InsuranceExpiryDate", @id = "InsuranceExpiryDate" + (idValueToAttach) }.DisabledIf(viewOnlyUser == true) })
                        @Html.ValidationMessageFor(model => model.InsuranceExpiryDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <div class="form-row">
                    @Html.LabelFor(model => model.InsuranceAmount, htmlAttributes: new { @class = "control-label col-md-3 required" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.InsuranceAmount, new { htmlAttributes = new { @class = "form-control decimalType", @data_Model = "InsuranceAmount" }.DisabledIf(viewOnlyUser == true) })
                        @Html.ValidationMessageFor(model => model.InsuranceAmount, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript">
    $(document).ready(function () {
        $(".date").datepicker({
            dateFormat: 'yy/mm/dd',
            changeMonth: true,
            changeYear: true
        });

        $('.decimalType').toArray().forEach(function (field) {
            new Cleave(field, {
                numeral: true,
                numeralThousandsGroupStyle: 'thousand'
            });
        });
    });
</script>